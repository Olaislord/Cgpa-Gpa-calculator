<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/teal_primary">

    <!-- info -->
    <LinearLayout
        android:id="@+id/introLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textinfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info2"
            android:typeface="serif"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:background="@drawable/background_pad_white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/introLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textinfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info1"
            android:typeface="serif"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:background="@drawable/background_pad_white"/>

    </LinearLayout>

</LinearLayout>